<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".view.cedera.ActivityCedera">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCedera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pencegahan Cedera Olahraga"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Cedera Olahraga"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tingkat1Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_tingkat1" />

                            <ImageView
                                android:id="@+id/tingkat2Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_tingkat2" />

                            <ImageView
                                android:id="@+id/tingkat3Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_tingkat3" />
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFDDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Jenis Cedera Olahraga"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/jenis1Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_jenis1" />

                            <ImageView
                                android:id="@+id/jenis2Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_jenis2" />
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFDDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Cedera dan Pertolongan Pertama"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/pertolongan1Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pertolongan1" />

                            <ImageView
                                android:id="@+id/pertolongan2Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pertolongan2" />

                            <ImageView
                                android:id="@+id/pertolongan3Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pertolongan3" />

                            <ImageView
                                android:id="@+id/pertolongan4Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pertolongan4" />

                            <ImageView
                                android:id="@+id/pertolongan5Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pertolongan5" />

                            <ImageView
                                android:id="@+id/pertolongan6Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pertolongan6" />

                            <ImageView
                                android:id="@+id/pertolongan7Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pertolongan7" />

                            <ImageView
                                android:id="@+id/pertolongan8Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pertolongan8" />
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFDDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Penyebab Terjadinya Cedera"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/penyebabCedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_penyebab" />
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFDDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Prinsip Dasar Pencegahan Cedera"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/pencegahan1Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pencegahan1" />

                            <ImageView
                                android:id="@+id/pencegahan2Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pencegahan2" />

                            <ImageView
                                android:id="@+id/pencegahan3Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pencegahan3" />

                            <ImageView
                                android:id="@+id/pencegahan4Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pencegahan4" />

                            <ImageView
                                android:id="@+id/pencegahan5Cedera"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_cedera_pencegahan5" />
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>