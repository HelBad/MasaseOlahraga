<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".view.teknik.ActivityTeknik">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTeknik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Teknik (Sport Massage)"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Posisi Duduk"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/duduk1Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_kepala" />

                            <ImageView
                                android:id="@+id/duduk2Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_leher" />

                            <ImageView
                                android:id="@+id/duduk3Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_streaching_1" />
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFDDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Posisi Anterior (Terlentang)"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/anterior1Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_lengan" />

                            <ImageView
                                android:id="@+id/anterior2Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_perut" />

                            <ImageView
                                android:id="@+id/anterior3Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_tungkai_1" />

                            <ImageView
                                android:id="@+id/anterior4Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_streaching_2" />
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFDDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Posisi Posterior (Telungkup)"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/posterior1Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_pinggang" />

                            <ImageView
                                android:id="@+id/posterior2Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_tungkai_2" />

                            <ImageView
                                android:id="@+id/posterior3Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_kaki" />

                            <ImageView
                                android:id="@+id/posterior4Teknik"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_marginHorizontal="5dp"
                                android:src="@drawable/img_teknik_streaching_3" />
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>